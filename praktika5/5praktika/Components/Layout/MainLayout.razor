@page "/profile"

<PageTitle>Профиль</PageTitle>

@inherits LayoutComponentBase

<div class="page">
    <main>
        <NavBar/>
        <AuthorizeView>
            <NotAuthorized>
                <article class="content px-4" style="width: 100%; height:100%">
                    @Body
                </article>
            </NotAuthorized>
            <Authorized>
                <div class="d-flex" style="background-color: #fff; width: 100%">
                    <div class="sidebar">
                        <NavMenu />
                    </div>
                    <div class="content px-4" style="margin-left:auto; margin-right:auto; margin-top: 0; width: 70%;">
                        @Body
                    </div>
                </div>
            </Authorized>
        </AuthorizeView>
    </main>
</div>